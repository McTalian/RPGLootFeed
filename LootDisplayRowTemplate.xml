<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="LootDisplayRow.lua"/>
    <Frame name="LootDisplayRowTemplate" virtual="true" mixin="LootDisplayRowMixin">
        <Layers>
            <!-- Background Layer -->
            <Layer level="BACKGROUND">
                <Texture parentKey="Background" file="Interface/Buttons/WHITE8x8">
                    <Anchors>
                        <Anchor point="TOPLEFT" />
                        <Anchor point="BOTTOMRIGHT" />
                    </Anchors>
                </Texture>
            </Layer>

            <!-- Amount Text Layer -->
            <Layer level="ARTWORK">
                <FontString parentKey="AmountText" inherits="GameFontNormal" justifyH="LEFT" />
            </Layer>

            <!-- Highlight Border Layer -->
            <Layer level="OVERLAY">
                <Texture parentKey="HighlightBorder" file="Interface\\COMMON\\WhiteIconFrame" alphaMode="ADD" />
            </Layer>
        </Layers>
        <Frames>
          <ItemButton parentKey="Icon" />
        </Frames>
        <Scripts>
          <OnHide method="OnHide"/>
        </Scripts>
    </Frame>
</Ui>
